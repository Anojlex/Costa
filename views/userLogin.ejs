<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>login-COSTA</title>
   
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/user-login.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light outer-nav">
        <a class="navbar-brand costa-logo" href="/costa">COSTA</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse nav-my-links" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/costa">Home</a>
                </li>
                <li class="nav-item ">
                    <a class="nav-link" href="#">Men</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Women</a>
                </li>
               
                <li class="nav-item active">
                    <a class="nav-link" href="#">login</a>
                </li>
            </ul>
        </div>
    </nav>

    <div id="signup-popup">
        <div id="signup-form">
            <form class="signup-form-p" id="login-form" method="post" action="/user/login">
                <h4>C.O.S.T.A</h4>
                <h6>Login</h6>
               
                <div class="signup-input"><input  id="email"  type="text" name="email" placeholder="Email"></div>
                <div id="email-error" class="error-message"></div>
                <div class="signup-input"><input  id="password" type="password" name="password" placeholder="Password"></div>
                <div id="password-error" class="error-message"></div>
               <button class="signup" type="submit">Login</button>
                <% if(typeof message!=='undefined'){ %>
                    <div><p style="color: red; text-align: center;"><%= message %></p></div>
                    <% } %>
                <div class="d-flex" style="justify-content: space-between; font-size: 13px;"><a href="/user/signup" id="login-link">Signup</a><a href="#" onclick="openPhoneForm()" id="login-link">Forgot Password?</a></div>
               
                
            </form>
        </div>
    </div>
    <div class="overlay" id="overlay"></div>

<!-- ========================================================= -->

    <div class="form-popup" id="phoneForm">
    <form  class="form-container newNumSendOtp">
     <div class="close-btn"><h4>Enter Your Registered Phone Number</h4> <button type="button" class="btn-cancel" onclick="closePhoneForm()"><img src="/images/icons8-cancel-24.png"></button></div>
  
      
      <input type="text" id="newPhone" placeholder="Enter New Phone Number" name="mobile" >
      <div id="newPhoneError" class="error-message"></div>

      <button type="button" onclick="UserNumSendOtp()" class="btn">Send OTP for Verification</button>
     
    </form>
  </div>


    <!-- ================================================ -->

    <div class="form-popup" id="OtpVerify">
        <form class="form-container forgotOtp">
            <div class="close-btn">
                <h4>Enter OTP sent to Registered Phone Number</h4>
                <button type="button" class="btn-cancel" onclick="closeForgotPwdOtpForm()">
                    <img src="/images/icons8-cancel-24.png">
                </button>
            </div>
      
            <input type="text" id="otpInput" placeholder="Enter the received OTP" name="otp">
            <div id="otp-error" class="error-message"></div>
      
            <button type="button" class="btn" onclick="verifyOtp()">Verify OTP</button>
        </form>
      </div>
      
      
      <!--================== ----FORGOT PASSWORD FORM----===================---->
      <!-- Change password form -->
      <div class="form-popup" id="ChangePwd">
        <form  id="updateForgotPwd" class="form-container updateForgotPwd">
            <div class="close-btn">
                <h4>Change Password</h4>
                <button type="button" class="btn-cancel" onclick="closeChangePwd()">
                    <img src="/images/icons8-cancel-24.png">
                </button>
            </div>
      
            <input type="password" id="newp" placeholder="New Password" name="newPassword">
            <div id="newp-error" class="error-message"></div>
      
            <input type="password" id="confirmp" placeholder="Confirm Password" name="password">
            <div id="confirmp-error" class="error-message"></div>
      
            <div id="changePwdSuccessp" class="success-message"></div>
            <button type="submit"   class="btn">Change Password</button>
        </form>
      </div>
      
      




<script src="/javascript/userLogin-validation.js"></script>
<script src="/javascript/forgotPwd.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
